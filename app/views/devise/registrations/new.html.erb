
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="container create-club">
    <h2 style="padding-bottom: 25px">Sign up</h2>
    <%= f.input :email, placeholder: "*email", label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password, placeholder: "*password", label: false,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, placeholder: "*password confirmation", label: false,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :first_name, placeholder: "*first name", label: false, required: true %>
    <%= f.input :last_name, placeholder: "*last name", label: false, required: true %>
    <%= f.input :address, placeholder: "*address", label: false, required: true %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, "Sign up", class: 'button' %>
    <div class="dsl">
    <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
