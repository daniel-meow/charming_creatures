<div class="message-container <%= message.user == current_user ? "sender" : "receiver" %>" id="message-<%= message.id %>" data-sender-id="<%= message.user.id %>">
  <div class="msg" >
    <i class="author">
      <span><strong><%= message.user.first_name %></strong></span>
    </i>
    <p><%= message.content %></p>
  </div>
</div>